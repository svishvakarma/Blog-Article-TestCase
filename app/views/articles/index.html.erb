
<% if current_user.logger? %>
<%= link_to 'Destroy',auth_sign_out_url(id: current_user.id), 
    data: { "turbo-method": :delete},
    data: { confirm: "Delete this news item?" } 
%>
<% else %>
  <%= link_to 'signup',new_user_registration_path %>
  <%= link_to 'login',auth_sign_in_path, method: :post%>
 
<% end %>

<h1>Article index</h1>

<table class="article-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
			<th>New</th>
			<th>Show</th>
			<th>Edit</th>
			<th>Delete</th>
			<th>Add Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.body %></td>
				<td><%= link_to "New Article", new_article_path %></td>
				<td><%= link_to "Show Article", article_path(id: article.id) %></td>
				<td><%= link_to "Edit Article", edit_article_path(id: article.id) %></td>
				<td><%= link_to "Destroy Article", article_path(id: article.id),data: {
					turbo_method: :delete,
					turbo_confirm: "Are you sure?"} %></td>
				<td><%= link_to "Add Comments", new_article_comment_path(article_id: article.id) %></td>
			</tr>
    <% end %>
  </tbody>
</table>

<h1>Comments</h1>

<table class="comment-table">
  <thead>
    <tr>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
	<% @articles.each do |article| %>
      <% article.comments.each do |comment| %>
        <tr>
          <td><%= comment.body %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


